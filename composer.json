{
    "name": "krok/asset-installer",
    "description": "Asset installer",
    "keywords": [
        "composer",
        "plugin",
        "installer",
        "asset"
    ],
    "type": "composer-plugin",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "krok",
            "email": "yii2.developer@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "composer-plugin-api": "^2.0",
        "composer/installers": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 1800,
        "sort-packages": true
    },
    "extra": {
        "class": "Krok\\Asset\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Krok\\Asset\\": "src"
        }
    }
}
